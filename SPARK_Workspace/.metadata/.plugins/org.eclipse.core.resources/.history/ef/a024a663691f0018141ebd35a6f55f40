class Person(val id:Int,var name:String, var classname:String){
  //accessors getters //Mutators setters
  private var fee:Float=0.0f
  def  getFee():Float={
    fee
  }
  def setFee( fee1:Float)={
    this.fee=fee1;
  }
  def feeIncr={
    fee+100.0f
  }
}