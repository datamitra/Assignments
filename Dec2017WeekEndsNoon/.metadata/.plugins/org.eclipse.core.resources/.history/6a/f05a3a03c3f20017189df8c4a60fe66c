package com.inv;

import java.io.IOException;

import org.apache.hadoop.io.Text;
import org.apache.hadoop.mapreduce.Reducer;

public class JoinReducer extends Reducer<Text, Text, Text, Text> {
	String deptName="";
	String deptid="";
	@Override
	protected void reduce(Text key, Iterable<Text> value, Context context)
			throws IOException, InterruptedException {
		// 001_dept, hadoop
		if(key.toString().contains("dept")){
			deptid=key.toString().split("_");
			for (Text val : value) {
				deptName=val.toString();				
			}
		}
		//001_emp , <emp1,emp10>
		if(key.toString().contains("emp")){
			String emp_deptid=key.toString().split("_");
			
			deptName=emp_deptid.equals(deptid)?deptName:"Not-Found";
			
			for (Text val : value) {
				context.write(val, new Text(deptName));				
			}
		}
	
	
	}

}
